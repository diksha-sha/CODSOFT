#include <iostream>

using namespace std;

int main() 
{
   
    char operation;
    double num1, num2;

    cout << "\n\t\t\t\tHey! Welcome To The Simple Calculator Setup\n";
    cout << "\nEnter first number: ";
    cin >> num1;
    cout << "\nEnter second number: ";
    cin >> num2;

    cout << "\nEnter an operator (+, -, *, /): ";
    cin >> operation;
    
    switch(operation) {
        
        case '+':
            cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;
            break;
            
        case '-':
            cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;
            break;
            
        case '*':
            cout << num1 << " * " << num2 << " = " << num1 * num2 << endl;
            break;
            
        case '/':
            if (num2 != 0) {
                cout << num1 << " / " << num2 << " = " << num1 / num2 << endl;
            } else {
                cout << "Error! Division by zero." << endl;
            }
            break;
            
        default:
            cout << "Error! Operator is not correct" << endl;
            break;
    }
   
    return 0;
}
